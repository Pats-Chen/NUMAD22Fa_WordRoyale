<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/loginETUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/login_username"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_login_username"
        android:drawablePadding="2dp"
        android:onClick="login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginETPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="300dp" />

    <EditText
        android:id="@+id/loginETPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/login_password"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_login_password"
        android:drawablePadding="2dp"
        android:onClick="signup"
        app:layout_constraintTop_toBottomOf="@id/loginETUsername"
        app:layout_constraintBottom_toTopOf="@+id/loginButtonLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="300dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButtonLogin"
        android:text="@string/login_button_login"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/loginETPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loginButtonSignup"
        app:cornerRadius="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButtonSignup"
        android:text="@string/login_button_signup"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/loginETPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginButtonLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>