<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="50dp"
    tools:context=".CardActivity" >

    <LinearLayout
        android:id="@+id/cardActivityCardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="450dp" >

            <TextView
                android:id="@+id/cardTVCardFront"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:background="@color/design_default_color_primary"
                android:gravity="center"
                android:text="@string/card_card_front"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="cardFrontToBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="15dp"/>

            <TextView
                android:id="@+id/cardTVCardBack"
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:textAlignment="center"
                android:text="@string/card_card_back"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@color/design_default_color_secondary"
                android:gravity="center"
                android:alpha="0"
                android:onClick="cardBackToFront"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="15dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/cardTVCardDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="CARD DIFFICULTY"
                android:textColor="#000000"
                android:textStyle="bold"
                android:alpha="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/deleteButtonCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButtonCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="DELETE"
                android:textStyle="bold"
                android:onClick="deleteCard"
                app:cornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cardTVCardDifficulty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>